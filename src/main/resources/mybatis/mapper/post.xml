<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="post">
	<select id="getList" resultType="post" parameterType="map">
		select * from (select rownum as rnum, a.* 
		from (select * from quest_post
						where
		        			<choose>
		        			 	<when test="game_abb != 'all'">
		        					game_abb = #{game_abb}
		        				</when>
		        				<otherwise>
		        					game_abb like('%')
		        				</otherwise>
		        			</choose> <!-- Choose는 나중에 resultMap으로 관리해서 게임을 가져올 때 해당하는 게시물을 가져오는것으로 바꿔보자! -->
		        		<if test="board_idList != null">
		        			and
		        			<foreach collection="board_idList" item="board_idList" index="i" open="(" close=")" separator="or">
		        				board_id = #{board_idList.value}
		        			</foreach>
		        			
		        		</if>
		        		<if test="board_id != 0">
		        		and board_id = #{board_id}
		        		</if>
		        		
						<if test="option != null">
						and
			        	<choose>
			        		<when test="option == 'all'">
			        			(user_id like '%'||#{text}||'%' or
			        			post_title like '%'||#{text}||'%' or
			        			post_content like '%'||#{text}||'%')
			        		</when>
			        		<when test="option == 'name'">
			        			user_id like '%'||#{text}||'%'
			        		</when>
			        		<when test="option == 'title'">
			        			post_title like '%'||#{text}||'%'
			        		</when>
			        		<when test="option == 'content'">
			        			post_content like '%'||#{text}||'%'
			        		</when>
			        		<when test="option == 'title_content'">
			        			(post_title like '%'||#{text}||'%' or
			        			post_content like '%'||#{text}||'%')
			        		</when>
			        	</choose>
			        </if> order by post_regdate desc )  a) where rnum between #{start} and #{end}
	</select>
	
	
	<select id="getAllList" resultType="post" parameterType="map">
		select * from (select rownum as rnum, a.* 
		from (select * from quest_post
						<if test="option != null">
						where
			        	<choose>
			        		<when test="option == 'all'">
			        			(user_id like '%'||#{text}||'%' or
			        			post_title like '%'||#{text}||'%' or
			        			post_content like '%'||#{text}||'%')
			        		</when>
			        		<when test="option == 'name'">
			        			user_id like '%'||#{text}||'%'
			        		</when>
			        		<when test="option == 'title'">
			        			post_title like '%'||#{text}||'%'
			        		</when>
			        		<when test="option == 'content'">
			        			post_content like '%'||#{text}||'%'
			        		</when>
			        		<when test="option == 'title_content'">
			        			(post_title like '%'||#{text}||'%' or
			        			post_content like '%'||#{text}||'%')
			        		</when>
			        	</choose>
			        </if>
			        <if test="board_id != null">
						<if test="option == null">
							where
						</if>
						<if test="option != null">
							and
						</if>
					<if test="board_id == 0">
						board_id >= 1
					</if>
		        		board_id = #{board_id}
	        		</if>
	        		
			         order by post_regdate desc )  a) where rnum between #{start} and #{end}
	</select>
	
	
	<select id="getPost" parameterType="int" resultMap="postMap" >
		select * from quest_post where post_id = #{value}
	</select>
	
	<resultMap type="post" id="postMap">
		<id property="post_id" column="post_id"/>
		<collection select="comment.selectList"
		            column="post_id"
		            ofType="comment"
		            property="commentList"/>
	</resultMap>
	
	
	<select id="getSize" resultType="int">
		select count(post_id) from quest_post
						where
		        			<choose>
		        			 	<when test="game_abb != 'all'">
		        					game_abb = #{game_abb}
		        				</when>
		        				<otherwise>
		        					game_abb like('%')
		        				</otherwise>
		        			</choose>
		        		<if test="board_idList != null">
		        			and
		        			<foreach collection="board_idList" item="board_idList" index="index" open="(" close=")" separator="or">
		        				board_id = #{board_idList.value}
		        			</foreach>
		        		</if>
		        			
						<if test="board_id != 0">
		        		and 
		        		<choose>
		        		<when test="board_id == 0">
							board_id >= 1
						</when>
						<when test="board_id != 0">
							board_id = #{board_id}
						</when>
						</choose>
		        		
		        		</if>
		        			
						<if test="option != null">
						and
			        	<choose>
			        		<when test="option == 'all'">
			        			(user_id like '%'||#{text}||'%' or
			        			post_title like '%'||#{text}||'%' or
			        			post_content like '%'||#{text}||'%')
			        		</when>
			        		<when test="option == 'name'">
			        			user_id like '%'||#{text}||'%'
			        		</when>
			        		<when test="option == 'title'">
			        			post_title like '%'||#{text}||'%'
			        		</when>
			        		<when test="option == 'content'">
			        			post_content like '%'||#{text}||'%'
			        		</when>
			        		<when test="option == 'title_content'">
			        			(post_title like '%'||#{text}||'%' or
			        			post_content like '%'||#{text}||'%')
			        		</when>
			        	</choose>
			        	</if>
	</select>
	
	<insert id="insert" parameterType="post">
		insert into quest_post values(quest_post_id.nextval,#{game_abb},#{board_id},'admin',#{post_title},#{post_content},sysdate,0,0,0)
	</insert>
	
	<update id="plusLike" parameterType="post_like">
		update quest_post set post_like = post_like+1 where post_id = #{post_id} 
	</update>
	<update id="plusdisLike" parameterType="post_like">
		update quest_post set post_dislike = post_dislike+1 where post_id = #{post_id} 
	</update>
</mapper>









